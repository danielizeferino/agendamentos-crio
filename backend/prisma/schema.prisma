// backend/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  whatsapp  String?
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Room {
  id        String   @id            // "alfa" | "beta" | ...
  name      String
  block     String?
  capacity  Int?
  features  String?                 // simples: CSV (ex: "TV,Whiteboard")
  bookings  Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  title     String
  start     DateTime
  end       DateTime
  roomId    String
  userId    String?
  createdAt DateTime @default(now())

  room      Room     @relation(fields: [roomId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])

  @@index([roomId, start, end])
}
